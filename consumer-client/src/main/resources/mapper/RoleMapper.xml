<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zime.consumerclient.mapper.RoleMapper">

    <insert id="addRole" parameterType="com.zime.consumerclient.mode.Role">
        insert into VehicleManager.role (role_id,role_name) values(#{roleId},#{roleName})
    </insert>
    <update id="updateRole" parameterType="com.zime.consumerclient.mode.Role">
        update VehicleManager.role
        <set>
            <if test="roleName!= null and roleName!= ''">
                role_name=#{roleName},
            </if>
        </set>
        where role_id=#{roleId}
    </update>
    <delete id="deleteRole" parameterType="com.zime.consumerclient.mode.Role">
        delete from VehicleManager.role where role_id = #{roleId}
    </delete>


    <select id="getRoleById" resultType="com.zime.consumerclient.mode.Role" parameterType="Long">
        select u.*,ur.*,r.*
        from user_role ur
        left join user u on u.user_id=ur.user_id
        left join role r on r.role_id=ur.role_id
        where ur.user_id=#{userId}
    </select>
    <select id="getRoleList" resultType="com.zime.consumerclient.mode.Role">
        select * from VehicleManager.role
    </select>
</mapper>