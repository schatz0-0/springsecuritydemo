<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zime.consumerclient.mapper.UserRoleMapper">

    <insert id="addUserRole" parameterType="com.zime.consumerclient.mode.UserRole">
        insert into VehicleManager.user_role (user_role_id,user_id,role_id) values(#{userRoleId},#{userId},#{roleId})
    </insert>
    <update id="updateUserRole" parameterType="com.zime.consumerclient.mode.UserRole">
        update VehicleManager.user_role
        <set>
            <if test="userId!= null and userId!= ''">
                user_id=#{userId},
            </if>
            <if test="roleId!= null and roleId!= ''">
                role_id=#{roleId},
            </if>
        </set>
        where user_role_id=#{userRoleId}
    </update>

    <select id="getUserRole" resultType="com.zime.consumerclient.mode.UserRole" parameterType="com.zime.consumerclient.mode.UserRole">
        select * from VehicleManager.user_role
        <where>
            <if test="userRoleId!= null and userRoleId != ''">
                and `user_role_id` = #{userRoleId}
            </if>
            <if test="userId!= null and userId != ''">
                and `user_id` like concat('%',#{userId},'%')
            </if>
            <if test="roleId!=null and roleId != ''">
                and `role_id` like concat('%',#{roleId},'%')
            </if>
        </where>
    </select>

    <delete id="deleteUserRole" parameterType="com.zime.consumerclient.mode.UserRole">
        delete from VehicleManager.user_role where user_role_id = #{userRoleId}
    </delete>

    <select id="getUserRoleList" resultType="com.zime.consumerclient.mode.UserRole">
        select * from VehicleManager.user_role
    </select>
</mapper>